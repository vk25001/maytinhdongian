<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/manhinhtinh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="40sp"
            android:background="@color/white"></TextView>
        <TextView
            android:id="@+id/manhinhketqua"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="40sp"
            android:background="@color/white"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="C"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="7"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="4"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="1"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="0"
                android:onClick="so"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btconghaytru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="+/-"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="8"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="5"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="2"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/btdot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="."
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btphancham"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="%"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="9"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="6"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/bt3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="3"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>
            <Button
                android:id="@+id/btxoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="del"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/btchia2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="/"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="#0000FF"></Button>
            <Button
                android:id="@+id/btnhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="x"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="#0000FF"></Button>
            <Button
                android:id="@+id/bttru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="-"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="#0000FF"></Button>
            <Button
                android:id="@+id/btcong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="+"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="#0000FF"></Button>
            <Button
                android:id="@+id/btbang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="="
                android:textSize="50dp"
                android:textColor="@color/white"
                android:backgroundTint="#FFFF00"></Button>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>